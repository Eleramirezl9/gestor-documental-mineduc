{
  "name": "gestor-documental-mineduc",
  "version": "1.0.0",
  "description": "Sistema de Gestión Documental para el Ministerio de Educación de Guatemala",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run lint",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mineduc/gestor-documental"
  },
  "keywords": [
    "document-management",
    "mineduc",
    "react",
    "nodejs",
    "supabase"
  ],
  "author": "MINEDUC Development Team",
  "license": "MIT",
  "dependencies": {
    "openai": "^6.4.0",
    "pdf-parse": "^2.2.9",
    "sharp": "^0.34.4"
  }
}
