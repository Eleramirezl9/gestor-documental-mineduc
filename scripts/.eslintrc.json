{
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^[A-Z_]|^(data|response|error)$"
    }],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["*.js"],
      "env": {
        "commonjs": true,
        "node": true
      },
      "globals": {
        "require": "readonly",
        "module": "readonly",
        "process": "readonly",
        "__dirname": "readonly",
        "__filename": "readonly"
      },
      "parserOptions": {
        "sourceType": "script"
      }
    },
    {
      "files": ["*.mjs"],
      "env": {
        "es2022": true,
        "node": true
      },
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}